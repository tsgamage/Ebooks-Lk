<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EbooksLk Project</title>
    <link rel="stylesheet" href="styles.css">

    <!-- Bootstrap 5.3.3 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Boorsrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Local CSS -->
    <link rel="stylesheet" href="/styles/style.css">
</head>

<body>
    <!-- Navbar Start-->
    <header class="py-3 mb-3 border-bottom">
        <div class="container d-grid gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
            <a class="navbar-brand" href="#"><img src="./images/site/logo.png" alt=""></a>
            <div class="d-flex align-items-center justify-content-end ">
                <!-- Search Bar -->
                <form class=" col-lg-6 col-md-12 me-3" role="search">
                    <input type="search" class="form-control header-search" placeholder="Search for books ..."
                        aria-label="Search">
                </form>
                <!-- Bookmark-btn -->
                <button class="btn btn-primary me-3 nav-wlist-btn desktop-only hover-black"><i
                        class="bi bi-bookmark-heart-fill"></i></button>
                <!-- cart-btn  -->
                <button type="button" class="position-relative me-3 nav-cart-custoom desktop-only hover-black ">
                    Rs.2,000.00 <i class="bi bi-bag-fill"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        9+
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </button>
                <!-- Profile-btn  -->
                <div class="flex-shrink-0 dropdown">
                    <% if(locals.authorized){ %>
                        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/user/dimo-user.png" alt="mdo" width="32" height="32"
                                class="rounded-circle">
                        </a>
                        <%}else{%>
                            <a href="/login" class="d-block link-body-emphasis text-decoration-none"
                                aria-expanded="false">
                                <img src="/images/user/blank-user.jpg" alt="User" width="32" height="32"
                                    class="rounded-circle">
                            </a>
                            <%}%>
                                <ul class="dropdown-menu text-small shadow" id="profileDropDown">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item text-danger" href="#">Sign out</a></li>
                                </ul>
                </div>
            </div>
        </div>
    </header>
    <!-- Navbar End-->

    <!-- Mini Nav Start  -->
    <nav class="border-bottom">
        <div class="container d-flex gap-2 justify-content-center align-items-center mb-2">
            <a href="#" class="mini-nav-custom hover-black mobile-only" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"><i
                    class="bi bi-bar-chart-steps"></i></a>
            <a href="/" class="mini-nav-custom hover-black"><i class="bi bi-house-door-fill"></i> Home</a>
            <a href="/all" class="mini-nav-custom hover-black"><i class="bi bi-book-half"></i> All</a>
            <a href="/authors" class="mini-nav-custom hover-black"><i class="bi bi-person-circle"></i> Authors</a>
        </div>
    </nav>
    <!-- Mini Nav Ends  -->